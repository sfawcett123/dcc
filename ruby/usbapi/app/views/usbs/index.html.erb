<%= stylesheet_link_tag "table", "data-turbo-track": "reload" %>

<p style="color: green"><%= notice %></p>

<div id="roles" >
    <table class="styled-table">
      <thead>
           <tr>
            <th>Label</th>
            <th>Address</th>
            <th>Serial Number</th>
            <th></th>
          </tr>
      </thead>
      <% @usbs.each do |usb| %>
        <tbody>
          <tr><td><%= usb.label %></td>
              <td><%= usb.address %></td>
              <td><%= usb.serialnumber %></td>
              <td><i class="fa fa-link"></i></td>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>

<%= link_to "New role", new_usb_path %>
