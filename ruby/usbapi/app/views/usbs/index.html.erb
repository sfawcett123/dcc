<%= stylesheet_link_tag "table", "data-turbo-track": "reload" %>

<p style="color: green"><%= notice %></p>

<div id="roles" >
    <table class="styled-table">
      <thead>
           <tr>
            <th>ID</th>
            <th>Label</th>
            <th>Address</th>
            <th>Serial Number</th>
            <th></th>
          </tr>
      </thead>
      <% @usbs.each do |usb| %>
        <tbody>
          <tr>
            <td><%= usb.id %></td>
            <td><%= usb.label %></td>
            <td><%= usb.address %></td>
            <td><%= usb.serialnumber %></td>
            <td> <%= link_to connecticon( usb ) , toggle_path(:id => usb.id) %>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>
