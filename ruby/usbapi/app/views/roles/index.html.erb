<%= stylesheet_link_tag "table", "data-turbo-track": "reload" %>

<p style="color: green"><%= notice %></p>

<div id="roles" >
    <table class="styled-table">
      <thead>
           <tr><th>Name</th>
               <th>Path</th>
               <th></th>
           </tr>
      </thead>
      <% @roles.each do |role| %>
        <tbody>
          <tr>
            <td><%= role.name %></td>
            <td><%= role.path %></td>
            <td>
                <%= link_to editicon , role_path( :id => role.id )  %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>
