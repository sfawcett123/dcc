<%= stylesheet_link_tag "forms", "data-turbo-track": "reload" %>

Please enter some details about the role:

<%= form_for @role, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>

    <div class="radio_group">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Name" %>
    </div>

    <div class="radio_group">
      Choose a sketch for this role
    </div>

    <div class="radio_group">
      <% @sketchs.each do |sketch| %>
        <%= f.label sketch['path'] %>
        <%= f.radio_button :path , sketch['path'] %>
        </br>
      <% end %>
    </div>

    <div class="radio_group">
      <%= f.submit 'Next Step' %>
    </div>
  </fieldset>
<% end %>


