
<%= stylesheet_link_tag "forms" %>

<%= form_for @role, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset class="radio_group" >

    <div class="radio_group">
      <h2>Please enter some details about the role</h2> </br>
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => "Name" , :class => "form-field"%>
    </div>

    <div class="radio_group">
      <h2>Choose a sketch</h2> </br>
      <% @sketchs.each do |sketch| %>
        <%= f.label sketch['path'] %>
        <%= f.radio_button :path , sketch['path'] %>
        </br>
      <% end %>
    </div>

    <div class="radio_group">
      <%= f.submit 'Next Step' , :class => "button" %>
    </div>
  </fieldset>
<% end %>


